{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "jsx": "react",
    "lib": ["es2015", "es2016", "esnext", "dom"],
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "target": "es5",
    "types": ["node", "jest"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "cacheDirectory": "public/.awcache",
    "reportFiles": [
      "src/**/*.{ts,tsx}"
    ]
  },
  "include": ["src/**/*"]
}
